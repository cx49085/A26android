<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.example.cx49085.recourse.mine.MineFragment">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_mine"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_mine_head"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/username_mine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:ellipsize="end"
        android:maxEms="8"
        android:maxLines="1"
        android:text="User"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintLeft_toRightOf="@+id/civ_mine"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/sex_mine"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/ic_mine_male"
        app:layout_constraintLeft_toRightOf="@+id/username_mine"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/studyTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="7dp"
        android:ellipsize="end"
        android:maxEms="18"
        android:maxLines="1"
        android:text="I am a student"
        android:textColor="@color/text_mute"
        android:textSize="12dp"
        app:layout_constraintLeft_toRightOf="@+id/civ_mine"
        app:layout_constraintTop_toBottomOf="@id/username_mine" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv1_mine"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/civ_mine">

    </android.support.v7.widget.RecyclerView>



        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv2_mine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/mute"
            android:paddingTop="7dp"
            app:layout_constraintTop_toBottomOf="@+id/rv1_mine" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv3_mine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/mute"
            android:paddingTop="7dp"
            app:layout_constraintTop_toBottomOf="@+id/rv2_mine" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv4_mine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/mute"
            android:paddingTop="7dp"
            app:layout_constraintTop_toBottomOf="@+id/rv3_mine" />
    </android.support.constraint.ConstraintLayout>
</ScrollView>
</android.support.constraint.ConstraintLayout>
