<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/area_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_margin="3dp"
    android:padding="5dp"
    >

    <android.support.constraint.ConstraintLayout
        android:id="@+id/item_area_main"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="3dp"
        android:background="@drawable/item_community"
        android:layout_margin="5dp"
       >

        <ImageView
            android:id="@+id/item_vr_area_img"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:scaleType="fitXY"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/item_area_main" />

        <TextView
            android:id="@+id/item_vr_area_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="123123"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginStart="25dp"
            app:layout_constraintLeft_toRightOf="@id/item_vr_area_img"
            app:layout_constraintTop_toTopOf="@id/item_area_main" />

        <TextView
            android:id="@+id/item_vr_area_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="32dp"
            android:text="123"
            android:textColor="@color/glory"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@id/item_vr_area_img"
            app:layout_constraintTop_toTopOf="@id/item_vr_area_name" />

        <Button
            android:id="@+id/item_vr_area_enter"
            android:layout_width="64dp"
            android:layout_height="32dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/colorPrimaryDark"
            android:text="进入专区"
            android:textColor="?attr/colorButtonNormal"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>